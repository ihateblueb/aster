{
	"name": "backend",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"build": "swc src -d built --strip-leading-paths",
		"build-dev": "swc src -d built --strip-leading-paths --watch",
		"dev": "npm-run-all --parallel build-dev start-dev",
		"migrate": "pnpm exec typeorm migration:run -d ./built/utils/database.js",
		"revert": "pnpm exec typeorm migration:revert -d ./built/utils/database.js",
		"cli": "node --no-warnings built/cli/index.js",
		"start": "node --no-warnings built/boot.js",
		"start-dev": "node --watch --watch-preserve-output built/server.js",
		"lint": "pnpm exec eslint",
		"test": "vitest --ui"
	},
	"license": "AGPL-3.0",
	"dependencies": {
		"@bull-board/api": "^6.5.4",
		"@bull-board/express": "^6.5.4",
		"@peertube/http-signature": "^1.7.0",
		"@types/ws": "^8.5.13",
		"@wesleytodd/openapi": "^1.1.0",
		"bcryptjs": "^2.4.3",
		"body-parser": "^2.0.2",
		"bullmq": "^5.34.5",
		"chalk": "^5.4.1",
		"commander": "^13.0.0",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"dompurify": "^3.2.3",
		"express": "^4.20",
		"express-openapi": "^12.1.3",
		"frontend": "workspace:frontend",
		"ini": "^5.0.0",
		"jsdom": "^25.0.1",
		"mfm-js": "^0.24.0",
		"nanoid": "^5.0.9",
		"pg": "^8.13.1",
		"prom-client": "^15.1.3",
		"psl": "^1.15.0",
		"punycode": "^2.3.1",
		"redis": "^4.7.0",
		"typeorm": "^0.3.20",
		"ulid": "^2.3.0",
		"uuid": "^11.0.4",
		"ws": "^8.18.0",
		"yaml": "^2.6.1"
	},
	"devDependencies": {
		"@swc/cli": "0.5.2",
		"@swc/core": "^1.10.1",
		"@types/bcryptjs": "^2.4.6",
		"@types/body-parser": "^1.19.5",
		"@types/cookie-parser": "^1.4.8",
		"@types/cors": "^2.8.17",
		"@types/express": "^5.0.0",
		"@types/jsdom": "^21.1.7",
		"@types/uuid": "^10.0.0",
		"@vitest/ui": "^2.1.8",
		"eslint-plugin-import-sort": "^0.0.0",
		"eslint-plugin-only-warn": "^1.1.0",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"npm-run-all": "^4.1.5",
		"typescript": "^5.7.2",
		"vitest": "^2.1.8"
	}
}
